# Dropbox OAuth credentials
DROPBOX_ACCESS_KEY=your_app_key
DROPBOX_ACCESS_SECRET=your_app_secret
DROPBOX_REFRESH_TOKEN=your_refresh_token

# Obsidian vault path in Dropbox
DROPBOX_OBSIDIAN_VAULT_PATH=/obsidian/personal

# Timezone
SYSTEM_TIMEZONE=US/Pacific

# Webhook Base URL (shared across all services)
WEBHOOK_BASE_URL=https://your-ngrok-url.ngrok-free.app

# Telegram Bot
BOT_TOKEN=your_bot_token
TG_WEBHOOK_SECRET=your_webhook_secret

# Redis (set by docker-compose, override if needed)
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Todoist Webhooks
TODOIST_CLIENT_ID=your_client_id
TODOIST_CLIENT_SECRET=your_client_secret
TODOIST_ACCESS_TOKEN=your_oauth_access_token
