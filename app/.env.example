# Dropbox OAuth credentials
DROPBOX_ACCESS_KEY=your_app_key
DROPBOX_ACCESS_SECRET=your_app_secret
DROPBOX_REFRESH_TOKEN=your_refresh_token

# Obsidian vault path in Dropbox
DROPBOX_OBSIDIAN_VAULT_PATH=/obsidian/personal

# Linear workspace name in Obsidian (for workspace directory structure)
OBSIDIAN_LINEAR_WORKSPACE_NAME=_Chapters-Technology

# Timezone
SYSTEM_TIMEZONE=US/Pacific

# Webhook Base URL (shared across all services)
WEBHOOK_BASE_URL=https://your-ngrok-url.ngrok-free.app

# Telegram Bot
BOT_TOKEN=your_bot_token
TG_WEBHOOK_SECRET=your_webhook_secret

# Redis (set by docker-compose, override if needed)
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Todoist Webhooks
TODOIST_CLIENT_ID=your_client_id
TODOIST_CLIENT_SECRET=your_client_secret
TODOIST_ACCESS_TOKEN=your_oauth_access_token

# Linear Webhooks
LINEAR_WEBHOOK_SECRET=your_linear_webhook_signing_secret

# GitHub Webhooks
GITHUB_WEBHOOK_SECRET=your_github_webhook_signing_secret
GITHUB_USERNAME=your_github_username

# Manus AI Webhooks
MANUS_API_KEY=your_manus_api_key
MANUS_WEBHOOK_ID=your_manus_webhook_id

# Link Sharing API
LINK_SHARE_API_KEY=your_link_share_api_key

# Supadata API (YouTube video metadata)
SUPADATA_API_KEY=your_supadata_api_key

# OpenAI API (YouTube transcript summarization)
OPENAI_API_KEY=your_openai_api_key

# Manus AI
MANUS_API_KEY=your_manus_api_key
